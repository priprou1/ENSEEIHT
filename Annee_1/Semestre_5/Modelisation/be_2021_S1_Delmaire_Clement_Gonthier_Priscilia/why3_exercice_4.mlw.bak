module Produit

  use int.Int
  use ref.Refint

  let produit (a b : int) : int
    requires { b > 0 || b < 0 }
    ensures  { a*b = result }
  =
    let la = ref a in
    let lb = ref b in
    if (!lb < 0) then
    (
       la := - !la;
       lb := - !lb
    );
    let s = ref 0 in
    let i = ref 0 in
    while  (!i < !lb) do
      invariant { !s = !la * !i && !lb - !i > 0 && !lb >= 0 && !i >= 0}
      variant   { !lb - !i }
      s :=  (!s) + (!la);
      i := (!i) + 1
    done;
    !s

end